<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.xuchengpu.customcontrol.activitys.StepActivity">

    <com.xuchengpu.customcontrol.wiget.StepView
        android:id="@+id/step_view"
        android:layout_width="150dp"
        android:layout_height="140dp"
        app:borderwidth="5dp"
        app:outcolor="@color/colorAccent"
        app:stepsize="30dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="重置" />

    <com.xuchengpu.customcontrol.wiget.CircleProgressBar
        android:layout_width="150dp"
        android:id="@+id/circle_progressbar"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        app:mborderwith="8dp"
        app:minnercolor="@color/colorPrimary"
        app:moutcolor="@color/colorAccent"
        app:textcolor="@color/colorAccent"
        app:textsize="14sp" />
    <Button
        android:id="@+id/reset_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="重置" />

</LinearLayout>
